@{
    ViewData["Title"] = "Image Gallery";
}

<h2>@ViewData["Title"]</h2>

<div class="card-deck">
    @foreach (var imageFile in ViewBag.ImageFiles)
    {
        var fileNameWithExtension = System.IO.Path.GetFileName(imageFile);

        <div class="card">
            <img src="~/images/@imageFile" class="card-img-top img-thumbnail" alt="Image">
            <div class="card-body">
                <h5 class="card-title">@fileNameWithExtension</h5>
                <p class="card-text">Description or additional information about the image.</p>
            </div>
        </div>
    }
</div>
